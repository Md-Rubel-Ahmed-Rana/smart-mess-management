{
  "name": "smart-mess-management-backend",
  "description": "This is the backend for Smart Mess Management System. It provides APIs for managing mess operations, user authentication, and data storage. Built with Node.js, Express, and MongoDB.",
  "type": "commonjs",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "mess management",
    "backend",
    "nodejs",
    "express",
    "mongodb",
    "api",
    "smart mess",
    "food management",
    "canteen management",
    "meal tracking",
    "user authentication"
  ],
  "author": "Md Rubel Ahmed Rana",
  "license": "ISC",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:watch": "node_modules/.bin/jest --watch",
    "test:coverage": "node_modules/.bin/jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:check": "eslint . --ext .ts --ignore-path .eslintignore",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint-prettier": "npm run lint:check && npm run prettier:check",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eventemitter2": "^6.4.9",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "slugify": "^1.6.6",
    "tsconfig-paths": "^4.2.0",
    "uuid": "8",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "rimraf": "^4.4.1",
    "glob": "^9.3.5"
  }
}
